<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerlink}}
</head>
<body>
    {{>navbar}}
    <!-- main header -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_date">13 OCT</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get Output</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_value">0</span> <sup>o</sup>C </p>
                            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>

                </div>

                </div>
            </div>
        </div>
    </div>
    
    <!-- Footer -->
    {{>footer}}

    <script src="js/main.js"></script>
    <script>

        const getCurrentDay = () =>{
            var weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tuedayssss";
            weekday[3] = "Wednesday";
            weekday[4] = "Thursday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday";

            let currentTime = new Date();
            let day = weekday[currentTime.getDay()];
            return day;
        };
        let days = getCurrentDay();
        const day = document.getElementById("day");
        day.innerText = days;


        const getCurrentDate = ()=>{
            var months = ["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec"];
            let currentTime = new Date();
            let curMonth = months[currentTime.getMonth()];
            let curDate = currentTime.getDate();
            
            return `${curDate} ${curMonth}`;
        };
        let date = getCurrentDate();
        const curDate = document.getElementById("today_date");
        curDate.innerText = date;
    </script>
</body>
</html>